{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "loofi-workflow": {
      "type": "local",
      "command": ["python3", "scripts/mcp_workflow_server.py"],
      "enabled": true,
      "timeout": 10000
    },
    "loofi-agent-sync": {
      "type": "local",
      "command": ["python3", "scripts/mcp_agent_sync_server.py"],
      "enabled": true,
      "timeout": 10000
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true
    }
  },
  "permission": {
    "bash": {
      "*": "ask",
      "git *": "allow",
      "npm *": "allow",
      "python -m pytest *": "allow",
      "python -m flake8 *": "allow",
      "python -m mypy *": "allow",
      "python3 -m pytest *": "allow",
      "python3 -m flake8 *": "allow",
      "python3 -m mypy *": "allow",
      "PYTHONPATH=* python -m pytest *": "allow",
      "PYTHONPATH=* python3 -m pytest *": "allow",
      "just *": "allow",
      "just": "allow",
      "python3 scripts/project_stats.py *": "allow",
      "python3 scripts/sync_ai_adapters.py *": "allow",
      "python3 scripts/bump_version.py --dry-run *": "allow",
      "grep *": "allow",
      "rg *": "allow",
      "ls *": "allow",
      "cat *": "allow",
      "head *": "allow",
      "tail *": "allow",
      "wc *": "allow",
      "find *": "allow",
      "diff *": "allow",
      "flake8 *": "allow",
      "rm *": "deny",
      "rm -rf *": "deny",
      "sudo *": "deny",
      "pkexec *": "deny",
      "curl * | bash": "deny",
      "bash install.sh": "deny",
      "dnf *": "deny",
      "rpm-ostree *": "deny",
      "systemctl *": "deny",
      "chmod *": "deny",
      "chown *": "deny"
    },
    "edit": {
      "*": "ask",
      "loofi-fedora-tweaks/utils/*.py": "allow",
      "loofi-fedora-tweaks/ui/*.py": "allow",
      "loofi-fedora-tweaks/cli/*.py": "allow",
      "loofi-fedora-tweaks/core/**/*.py": "allow",
      "loofi-fedora-tweaks/config/*.py": "allow",
      "tests/*.py": "allow",
      "tests/**/*.py": "allow",
      ".github/agent-memory/**/*.md": "allow",
      "version.py": "ask",
      "loofi-fedora-tweaks.spec": "ask",
      "pyproject.toml": "ask",
      "install.sh": "deny",
      "uninstall.sh": "deny",
      ".env*": "deny"
    }
  },
  "instructions": ["AGENTS.md"]
}
