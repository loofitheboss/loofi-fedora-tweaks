{
  "mcpServers": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "fetch": {
      "type": "stdio",
      "command": "python3",
      "args": [
        "-m",
        "mcp_server_fetch"
      ]
    },
    "loofi-workflow": {
      "type": "stdio",
      "command": "python3",
      "args": [
        "scripts/mcp_workflow_server.py"
      ],
      "cwd": "${workspaceFolder}"
    },
    "loofi-agent-sync": {
      "type": "stdio",
      "command": "python3",
      "args": [
        "scripts/mcp_agent_sync_server.py"
      ],
      "cwd": "${workspaceFolder}"
    }
  }
}
