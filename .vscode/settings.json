{
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "both",

  // Python environment
  "python.defaultInterpreterPath": "python",

  // Ruff — fast linter + formatter (replaces flake8, isort, black)
  "ruff.enable": true,
  "ruff.lint.run": "onSave",
  "ruff.fixAll": true,
  "ruff.organizeImports": true,

  // Mypy — static type checking
  "mypy-type-checker.args": [
    "--ignore-missing-imports",
    "--warn-return-any"
  ],

  // Pylint — deep analysis
  "pylint.args": [
    "--extension-pkg-allow-list=PyQt6,PyQt6.QtCore,PyQt6.QtGui,PyQt6.QtWidgets",
    "--disable=C0114,C0115,C0116,C0301,E0401"
  ],

  // Use ruff as the Python formatter
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.ruff": "explicit",
      "source.organizeImports.ruff": "explicit"
    }
  },

  "chatgpt.openOnStartup": false,
  "claudeCode.allowDangerouslySkipPermissions": true,
  "github.copilot.chat.claudeAgent.allowDangerouslySkipPermissions": true,
  "chat.agentSkillsLocations": {
    ".codex/skills": true,
    "~/.codex/skills": true
  },
  "chat.agentFilesLocations": {
    ".github/claude-agents": true,
    ".github/agents": true,
    ".github/instructions": true
  },
  "chat.mcp.serverSampling": {
    "loofi-fedora-tweaks/.vscode/mcp.json: io.github.github/github-mcp-server": {
      "allowedModels": [
        "copilot/gpt-5.3-codex",
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-opus-4.6",
        "copilot/claude-sonnet-4",
        "copilot/claude-sonnet-4.5",
        "copilot/gemini-2.5-pro",
        "copilot/gemini-3-flash-preview",
        "copilot/gemini-3-pro-preview",
        "copilot/gpt-4.1",
        "copilot/gpt-4o",
        "copilot/gpt-5",
        "copilot/gpt-5-mini",
        "copilot/gpt-5-codex",
        "copilot/gpt-5.1",
        "copilot/gpt-5.1-codex",
        "copilot/gpt-5.1-codex-max",
        "copilot/gpt-5.1-codex-mini",
        "copilot/gpt-5.2",
        "copilot/gpt-5.2-codex"
      ]
    },
    "Fedora Tweaks/.vscode/mcp.json: loofi-workflow": {
      "allowedModels": [
        "copilot/auto",
        "copilot/claude-haiku-4.5",
        "copilot/claude-opus-4.5",
        "copilot/claude-opus-4.6",
        "copilot/claude-sonnet-4",
        "copilot/claude-sonnet-4.5",
        "copilot/claude-sonnet-4.6",
        "copilot/gemini-2.5-pro",
