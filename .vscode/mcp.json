{
  "servers": {
    "github": {
      "type": "http",
      "url": "https://api.githubcopilot.com/mcp/",
      "toolsets": [
        "pull_requests",
        "code_security",
        "secret_protection",
        "issues",
        "repos"
      ]
    },
    "loofi-workflow": {
      "type": "stdio",
      "command": "python3",
      "args": [
        "scripts/mcp_workflow_server.py"
      ],
      "cwd": "${workspaceFolder}"
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    },
    "fetch": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "mcp-server-fetch"
      ]
    },
    "loofi-agent-sync": {
      "type": "stdio",
      "command": "python3",
      "args": [
        "scripts/mcp_agent_sync_server.py"
      ],
      "cwd": "${workspaceFolder}"
    }
  }
}