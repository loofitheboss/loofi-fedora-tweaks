{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const cp=require('node:child_process');const f=process.env.CLAUDE_FILE_PATH||'';if(!/\\.py$/i.test(f))process.exit(0);cp.spawnSync('flake8',[f,'--max-line-length=150','--ignore=E501,W503,E402,E722,E203','--quiet'],{stdio:'ignore'});process.exit(0);\""
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const cp=require('node:child_process');const f=process.env.CLAUDE_FILE_PATH||'';if(!/\\.py$/i.test(f))process.exit(0);cp.spawnSync('flake8',[f,'--max-line-length=150','--ignore=E501,W503,E402,E722,E203','--quiet'],{stdio:'ignore'});process.exit(0);\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const f=(process.env.CLAUDE_FILE_PATH||'').toLowerCase();if(/\\.(env|secret|key)$/.test(f)||/(^|[\\\\/])mcp\\.env$/.test(f)){console.error('BLOCKED: Cannot edit secrets/env files');process.exit(1);}\""
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const f=(process.env.CLAUDE_FILE_PATH||'').toLowerCase();if(/\\.(env|secret|key)$/.test(f)||/(^|[\\\\/])mcp\\.env$/.test(f)){console.error('BLOCKED: Cannot edit secrets/env files');process.exit(1);}\""
          }
        ]
      }
    ]
  }
}
